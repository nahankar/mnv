# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@postgres:5432/ai_pipeline
REDIS_URL=redis://redis:6379/0

# Service Configuration
ENVIRONMENT=development
SERVICE_NAME=ai-story-video-pipeline
LOG_LEVEL=INFO
LOG_FORMAT=json

# LLM Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here

# TTS Provider API Keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# Image Generation API Keys
OPENAI_DALLE_API_KEY=your_openai_api_key_here
STABILITY_API_KEY=your_stability_ai_api_key_here

# Music Generation API Keys
SUNO_API_KEY=your_suno_api_key_here
MUBERT_API_KEY=your_mubert_api_key_here

# Platform API Keys
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Storage Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET=your_s3_bucket_name_here
AWS_REGION=us-east-1

# Monitoring and Observability
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Cost Management
DAILY_BUDGET_LIMIT=100.00
MONTHLY_BUDGET_LIMIT=3000.00
COST_TRACKING_ENABLED=true

# Development Settings
DEBUG=false
TESTING=false